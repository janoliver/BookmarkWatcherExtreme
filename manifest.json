{

  "manifest_version": 2,
  "name": "BookmarkWatcherExtreme",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "bookmark-watcher@oelerich.org"
    }
  },

  "description": "Watching bookmarks of the mods.de board.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "notifications",
    "tabs",
    "*://forum.mods.de/bb/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "/icons/icon19.png",
      "38": "/icons/icon38.png"
    },
    "default_title": "BookmarkWatcherExtreme",
    "default_popup": "popup/choose_action.html",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "background/index.js"
    ]
  }

}