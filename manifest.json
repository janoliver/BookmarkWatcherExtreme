{

  "manifest_version": 2,
  "name": "mods.de Bookmark Trecker",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "bookmark-trecker@oelerich.org"
    }
  },
  "description": "Tracking bookmarks of the mods.de boards.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "*://forum.mods.de/bb/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "/icons/icon19.png",
      "38": "/icons/icon38.png"
    },
    "default_title": "Bookmark Trecker",
    "default_popup": "popup/popup.html",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "background/index.js"
    ]
  }
}